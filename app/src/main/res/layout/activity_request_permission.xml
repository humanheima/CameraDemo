<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data></data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.activity.NewRequestPermissionActivity">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请求单个权限"
                android:id="@+id/btn_request_single_permission" />

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请求多个权限"
                android:id="@+id/btn_request_multi_permission" />

        <Button
                android:id="@+id/btn_open_app_permission_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打开应用设置权限页面" />


    </LinearLayout>

</layout>